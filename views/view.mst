    <!-- Modal -->
    <div class="modal fade" id="ModalLongoExemplo" tabindex="-1" role="dialog" aria-labelledby="TituloModalLongoExemplo" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="TituloModalLongoExemplo">Contate o anunciante</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-signin needs-validation" novalidate autocomplete="off"   method="POST">
                        <div class="form-label-group">
                            <input type="text" id="inputName" class="form-control" placeholder="Nome" name="username" disabled autofocus value="{{ads.author.name}}">
                            <label for="inputName">Nome</label>
                        </div>
                        <div class="form-label-group">
                            <input type="cel" id="phone" class="form-control phone" placeholder="Telefone" minlength="14" maxlength="15" name="phone" disabled value="{{ads.author.phone}}">
                            <label for="phone">Telefone</label>
                        </div>
                        <div class="form-label-group">
                            <input type="email" id="email" class="form-control email" placeholder="E-mail"  name="email" disabled value="{{ads.author.email}}">
                            <label for="email">E-mail</label>
                        </div>
                        <h5>Informe o código de Referência.</h5>
                        <div class="form-label-group">
                            <input type="text" id="codeRef" class="form-control" placeholder="Ref. " disabled value="{{ads.codeRef}}">
                            <label for="codeRef">Ref.</label>
                        </div>
                  </form>      
                </div>
            </div>
        </div>
